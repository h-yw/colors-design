];

const { pathname } = Astro.url;
const isActive = (href: string) => {
  // Exact match for home
  if (href === getPath('/'))
    return pathname === href || pathname === href.replace(/\/$/, '');
  // For subpages, simple startsWith
  return pathname.startsWith(href);
};
