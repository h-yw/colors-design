import { GlobalControls } from './GlobalControls';
import { ui, defaultLang } from '../i18n/ui';

const t = ui[defaultLang];

// Helper to handle base path (e.g. /colors-design/)
const getPath = (path: string) => {
  const base = import.meta.env.BASE_URL; // e.g. "/" or "/colors-design/"
  const cleanPath = path.startsWith('/') ? path.slice(1) : path;
  if (base === '/' && cleanPath === '') return '/';
  if (base !== '/' && cleanPath === '') return base; // Return base with trailing slash usually, or strip it? Astro usually handles /colors-design/ as home
  // Actually simplest is: base + cleanPath
  return base + cleanPath;
};

